# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=WeatherforecastDB

MONGO_USER=mongo
MONGO_PASSWORD=mongo
MONGO_DB=MongoWeatherforecastDocumentDB

# Private NuGet Feed (GitHub Packages)
# Replace with your GitHub username and Personal Access Token (PAT)
# PAT needs read:packages permission
NUGET_USERNAME=your-github-username
NUGET_PASSWORD=your-github-pat-token

# Elasticsearch
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Azure Service Bus Emulator
ACCEPT_EULA=Y
SERVICEBUS_SQL_PASSWORD=ServiceBus123!

# Application Ports
API_PORT=8080
UI_PORT=8082
POSTGRES_PORT=5432
MONGODB_PORT=27017
ELASTICSEARCH_PORT=9200
SERVICEBUS_PORT=5672

# Authentication (Duende Demo Server)
AUTH_AUTHORITY=https://demo.duendesoftware.com
AUTH_AUDIENCE=api
AUTH_CLIENT_ID=interactive.public
AUTH_RESPONSE_TYPE=code

# Azure Service Bus (Emulator Connection)
AZURE_SERVICEBUS_CONNECTION_STRING=Endpoint=sb://azureservicebus:5672;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=SAS_KEY_VALUE;UseDevelopmentEmulator=true
